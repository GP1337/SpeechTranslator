<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.TranslationActivity">

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentRight="true"
        android:id="@+id/settings_button"
        android:src="@drawable/settings"
        />

    <TextView
        android:id="@+id/speech_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/divider"
        android:layout_alignParentLeft="true"
        android:text="test test test test test test test test test test" />

    <TextView
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:id="@+id/divider"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/speech_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/divider"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="test test test test test test test test test test" />

    <ImageView
        android:id="@+id/mic1"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_above="@+id/language1_name"
        android:src="@drawable/microphone_off" />

    <TextView
        android:id="@+id/language1_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RU"
        android:layout_alignParentBottom="true"
        android:paddingBottom="25dp"
        android:paddingLeft="25dp"
        android:drawableLeft="@drawable/flag_ru"
        />

    <ImageView
        android:id="@+id/mic2"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_above="@+id/language2_name"
        android:src="@drawable/microphone_off"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/language2_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EN"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:paddingBottom="25dp"
        android:paddingRight="25dp"
        android:drawableLeft="@drawable/flag_en"/>

</RelativeLayout>